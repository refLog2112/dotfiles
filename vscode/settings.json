{
    // == General Editor==
    "editor.fontFamily": "RecMonoCustom Nerd Font",    
    "editor.fontLigatures": true,
    "editor.fontWeight": "500",
    "editor.lineNumbers": "relative",
    "editor.scrollbar.verticalScrollbarSize": 9,
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.horizontalScrollbarSize": 9,
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.tokenColorCustomizations": {
        "[Dusk*]": {
            "textMateRules": [
                {
                    "scope": [
                        "variable.language.special.self.python",
                        "variable.parameter.function.language.special.self.python"
                    ],
                    "settings": {
                        "foreground": "#d97166",
                    }
                },
                {
                    "scope": [
                        "string",
                        "string.quoted"
                    ],
                    "settings": {
                        "foreground": "#81b37a"
                    }
                },
                {
                    "scope": [
                        "meta.function-call.generic.python",
                        "support.type.property-name",
                        "variable.other.property",
                        "entity.name.function.lua"
                    ],
                    "settings": {
                        "foreground": "#5894ae"
                    }
                },
                {
                    "scope": [
                        "constant"
                    ],
                    "settings": {
                        "foreground": "#ff6f64"
                    }
                }
            ]
        }
    },
    "editor.roundedSelection": true,
    "editor.bracketPairColorization.enabled": false,
	"editor.indentSize": 2,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "editor.guides.indentation": true,
    "editor.fontSize": 14,
    "workbench.tree.enableStickyScroll": false,
    "editor.stickyScroll.enabled": false,
    "editor.semanticHighlighting.enabled": true,
    "window.dialogStyle": "custom",
    
    // == workbench ==
    "workbench.colorTheme": "Dusk Italic",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#c8965e",
        "statusBar.border": "#584e4e",
        "activityBarBadge.background": "#c8965e",
        "sideBar.border": "#584e4e", 

        // "list.activeSelectionBackground": "#8984b759",
        // "list.activeSelectionForeground": "#ffaa4f",
        // "list.hoverBackground": "#3939395e",
        // "list.hoverForeground": "#ffaa4fe6",
        // "list.inactiveSelectionBackground": "#8984b726",
        // "list.inactiveSelectionForeground": "#ffaa4f",
        // "list.filterMatchBackground": "#3b3b3b4e",
        // "list.filterMatchBorder": "#e8ff4f",
        
        // "listFilterWidget.background": "#5953533e",
        "editor.lineHighlightBorder": "#9c578e75",
        "editor.selectionBackground": "#8984b743",
        
        "editorGroupHeader.tabsBackground": "#00000040",
        "sideBar.background": "#00000000",
        "sideBarSectionHeader.background": "#00000000",
        "activityBar.background": "#00000060",

        "editor.background": "#00000000",
        "input.background": "#00000040",
        "input.foreground": "#c7fb37d6",
        
        "peekViewEditor.background": "#0000001f",
        "peekViewEditorGutter.background": "#0000001f",
        "peekViewTitle.background": "#0000001f",
        "peekViewResult.background": "#0000001f",
        "tab.activeBackground": "#302e2e2f",
        "tab.inactiveBackground": "#00000000",
        // "tab.border": "#ecff5e5a",

        "statusBar.background": "#00000090",
        "statusBar.debuggingBackground": "#000000ab",
        "statusBar.noFolderBackground": "#000000ab",
        "statusBarItem.activeBackground": "#000000ab",
        "panel.background": "#000000ab",
        "quickInput.background": "#00000040",
        "quickInputList.focusForeground":"#fcff33",

        "editorStickyScroll.background": "#21202c",
        "terminalStickyScroll.background": "#21202c",
        "stickyScroll.background": "#21202c",
        "terminal.background": "#0000001f",
        "terminal.findMatchBackground": "#0000001f",
        "terminal.ansiBlack": "#0000001f",
        "terminal.ansiBrightBlack": "#0000001f",
        "terminal.ansiBrightYellow": "#c2c64e",
        "terminal.ansiYellow": "#fff944",
        "terminal.ansiBrightBlue": "#52799d",
        "terminal.ansiBlue": "#52799d",
        "terminal.ansiRed": "#ff0000",
        "terminal.ansiBrightRed": "#d25757",
        "terminal.ansiGreen": "#893354",
        "terminal.ansiBrightGreen": "#7bb474"
    },
    "workbench.preferredDarkColorTheme": "Dusk",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.fontAliasing": "default",

    // == Terminal ==
    "terminal.integrated.fontFamily": "RecMonoCustom Nerd Font",
    "terminal.integrated.drawBoldTextInBrightColors":true,
    "terminal.integrated.gpuAcceleration":"on",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorWidth": 3,
    // "terminal.integrated.mouseWheelZoom": true,
    "terminal.external.osxExec": "iTerm2.app",
    "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.fontSize": 15,

    // == Git ==
    // "git.enableSmartCommit": true,
    "git.openRepositoryInParentFolders": "never",

    // == Activity Bar ==
    "window.customTitleBarVisibility": "never",
    // "workbench.activityBar.location": "top",

    // == Apc Customize UI ==
    "apc.font.family": "RecMonoCustom Nerd Font",
    "apc.monospace.font.family": "RecMonoCustom Nerd Font",
    "window.titleBarStyle": "native",
    "window.commandCenter": false,
    "apc.menubar.compact": true,
    "apc.statusBar": {
		"height": 25,
        "position": "editor-bottom",
        "fontSize": 12,
	},
    "apc.activityBar": {
        "size": 35,
        "itemSize": 35,
        "itemMargin":0,
        "position": "top" 
    },
    "apc.header": {
        "height": 30,
        "fontSize": 14
    },
    "apc.electron": {
        "visualEffectState": "active",
        "backgroundColor": "rgba(20,21,22,0.5)",
        "transparent":true,
        "frame": false,
        "titleBarStyle": "hiddenInset",
        "vibrancy": "fullscreen-ui",
        "type": "textured",
    },

    "apc.listRow": {
        "fontSize": 14,
        "height": 24,
    },
    "apc.sidebar.titlebar": {
        "height": 30,
        "fontSize": 14
    },

    "apc.stylesheet": {
        ".editor .decorationsoverviewruler": "display: none !important",
        "div.visible.scrollbar.vertical .slider": "border-radius: 10px !important; left: -4px !important;",
        "div.visible.scrollbar.horizontal .slider": "border-radius: 10px !important; top: -4px !important;",
        ".monaco-breadcrumbs": "font-size: 10px; transform: translatey(0px);",
        ".monaco-workbench .part > .title > .title-label h2": "display: none",
        ".activitybar.left .content": "-webkit-app-region: none !important",
        ".activitybar .content .actions-container .action-item": "padding: 2 0px;",
        ".activitybar .content .actions-container .action-item:last-child": "border-right: 1px solid #584e4e;",
        ".activitybar .content .menubar": "display:none",
        ".activitybar .content .badge .badge-content": "height: 8px!important; width: 8px!important; padding:0!important; top:2px!important; color: transparent!important;",    
        
        ".monaco-editor" : "backdrop-filter: blur(100px); !important",
        "body": "background: rgba(0,0,0,0.4) !important",
        "root": "background: rgba(0,0,0,0.4) !important",
        ".quick-input-widget": "background: rgba(0,0,0,0.75) !important; backdrop-filter: blur(1px); !important; width: 1000px !important; left: calc(50% - 200px); top: 50px !important;",
        ".monaco-workbench .part.statusbar": "background: rgba(0,0,0,0.6)  !important",
        ".monaco-workbench .part.editor.input": "background: transparent !important; backdrop-filter: blur(1px); !important",
        ".monaco-workbench .part.sidebar": "background: rgba(0,0,0,0.4) !important",
        // ".monaco-list-row": "background: transparent !important; backdrop-filter: blur(0px); !important",
        // ".monaco-list-row:hover": "background: rgba(0,0,0,0.6) !important; backdrop-filter: blur(10px); !important",

        // tab roundness
        ".monaco-editor .suggest-widget": "background: rgba(0,0,10,0.6) !important; backdrop-filter: blur(10px); !important;border-radius: 8px; box-shadow: 0 0 15px 15px rgba(0, 0, 0, 0.1); padding-top: 15px",
    },

    "apc.imports": [
        "file:///Users/alexlungu/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.1/dist/updateHandler.js"
    ],

    // == Neovim ==
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",
    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",
    "vscode-neovim.logLevel": "info",

    // == Animations ==
    "animations.Enabled": true,
    "animations.Auto-Install": true,
    "animations.Install-Method": "Apc Customize UI++",
    "animations.Active": "None",
    "animations.Command-Palette": "Scale",
    "animations.CursorAnimation": false,
    "animations.Scrolling": "None",
    "animations.Smooth-Mode": true,
    "animations.Tabs": "None",
    "editor.accessibilitySupport": "off",

    // == Neovim UI ==
    // "nvim-ui.nvimColorNormal": "#c8965e",
    // "nvim-ui.nvimColorInsert": "#d64042",
    // "nvim-ui.nvimColorVisual": "#488aa7",
